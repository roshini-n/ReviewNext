{
  "name": "ReviewNext - Game & Product Review Tracker",
  "short_name": "ReviewNext",
  "description": "Track and review games, movies, books, electronics, and beauty products. Create lists, rate products, and discover new items.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#004D35",
  "theme_color": "#004D35",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["productivity", "entertainment", "lifestyle"],
  "screenshots": [
    {
      "src": "assets/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop Home Screen"
    },
    {
      "src": "assets/screenshots/mobile-home.png",
      "sizes": "360x640",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Home Screen"
    }
  ],
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "ReviewNext.ico",
      "sizes": "16x16 32x32",
      "type": "image/x-icon"
    }
  ],
  "shortcuts": [
    {
      "name": "Add Game Review",
      "short_name": "Add Game",
      "description": "Quickly add a new game review",
      "url": "/games/add",
      "icons": [
        {
          "src": "assets/icons/shortcut-game.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View My Reviews",
      "short_name": "My Reviews",
      "description": "View all your reviews",
      "url": "/my-reviews",
      "icons": [
        {
          "src": "assets/icons/shortcut-reviews.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search Products",
      "short_name": "Search",
      "description": "Search for products and reviews",
      "url": "/search",
      "icons": [
        {
          "src": "assets/icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-review",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "file_handlers": [
    {
      "action": "/import-reviews",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "reviewnext",
      "url": "/app?product=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.naguru.reviewnext",
      "id": "com.naguru.reviewnext"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}